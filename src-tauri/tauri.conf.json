{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "melocoton",
  "version": "0.1.0",
  "identifier": "app.melocoton.app",
  "build": {
    "frontendDist": "../views"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "melocoton",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["binaries/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
